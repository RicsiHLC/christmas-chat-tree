{
  "extends": "react-app",
  "settings": {
    "react": {
      "version": "16.8.6"
    }
  },
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 1,
        "quotes": [1, "double"],
        "indent": [1, 4, { "SwitchCase": 1 }],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 1,
        "no-empty": 1,
        "array-callback-return": 0,
        "no-var": 1,
        "space-before-function-paren": [1, "never"],
        "no-debugger": 1,
        "space-infix-ops": 1,
        "padded-blocks": [1, "never"],
        "keyword-spacing": 1
    }
}
